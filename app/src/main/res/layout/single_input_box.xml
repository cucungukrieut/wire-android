<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.waz.zclient.ui.text.TypefaceEditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/transparent"
            android:paddingEnd="@dimen/wire__padding__regular"
            android:paddingStart="@dimen/wire__padding__regular"
            android:textColor="@color/black"
            android:textColorHint="@color/light_graphite"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__light"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:cursorVisible="true"
            />

        <com.waz.zclient.views.GlyphButton
            android:id="@+id/confirmation_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:text="@string/glyph__next"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginEnd="@dimen/wire__padding__regular"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal|top"/>

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:textSize="@dimen/wire__text_size__small"
            android:textColor="@color/accent_red"
            android:text="error!"
            android:gravity="center_horizontal|top"/>

    </FrameLayout>

</LinearLayout>
