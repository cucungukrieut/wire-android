<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/teams_verify_email_title"
        app:w_font="@string/wire__typeface__light"
        android:textSize="@dimen/wire__text_size__even_huger"
        android:textColor="@color/black"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        app:w_font="@string/wire__typeface__light"
        android:textSize="@dimen/wire__text_size__small"
        android:textColor="@color/graphite"
        android:layout_marginTop="@dimen/wire__padding__8"
        />

    <com.waz.zclient.common.views.NumberCodeInput
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/resend_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/teams_verify_email_resend"
            app:w_font="@string/wire__typeface__light"
            android:textSize="@dimen/wire__text_size__tiny"
            android:textColor="@color/black"
            />

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/change_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/teams_verify_email_change"
            app:w_font="@string/wire__typeface__light"
            android:textSize="@dimen/wire__text_size__tiny"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>
