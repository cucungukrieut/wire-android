<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t1"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__medium"
                    android:background="@drawable/rounded_corner_background_white_small"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t2"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__medium"
                    android:background="@drawable/rounded_corner_background_white_small"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t3"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__medium"
                    android:background="@drawable/rounded_corner_background_white_small"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t4"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__medium"
                    android:background="@drawable/rounded_corner_background_white_small"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t5"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__medium"
                    android:background="@drawable/rounded_corner_background_white_small"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t6"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__medium"
                    android:background="@drawable/rounded_corner_background_white_small"/>
            </FrameLayout>

        </LinearLayout>

        <com.waz.zclient.ui.cursor.CursorEditText
            android:id="@+id/code_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/teams_input_box_height"
            android:paddingStart="@dimen/wire__padding__regular"
            android:paddingEnd="@dimen/wire__padding__regular"
            android:background="@null"
            android:textSize="@dimen/wire__text_size__medium"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:visibility="visible"
            android:alpha="@dimen/framework__zero__alpha"
            android:textIsSelectable="false"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_entry_input_box_aux_height">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:layout_width="@dimen/progress_spinner_size"
            android:layout_height="@dimen/progress_spinner_size"
            android:layout_gravity="center_horizontal|top"/>

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:textSize="@dimen/wire__text_size__small"
            android:textColor="@color/teams_error_red"
            android:gravity="center_horizontal|top"/>

    </FrameLayout>

</LinearLayout>
